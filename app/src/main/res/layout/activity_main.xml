<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:fillViewport="false">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/sheetName"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:hint="Sheet Name"
                android:inputType="text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" />
            <EditText
                android:id="@+id/teamNumber"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:hint="Team Number"
                android:inputType="number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sheetName"
                android:layout_marginStart="8dp" />

            <EditText
                android:id="@+id/matchNumber"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:ems="10"
                android:hint="Match Number"
                android:inputType="number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teamNumber"
                android:layout_marginStart="8dp" />
            <TextView
                android:id="@+id/AllianceLabel"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Alliance"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/matchNumber"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/RedAllianceLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Red"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AllianceLabel"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="15dp"
                android:textAlignment="center"
                />
            <Switch
                android:id="@+id/AllianceSwitch"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/RedAllianceLabel"
                app:layout_constraintTop_toTopOf="@+id/RedAllianceLabel"
                />
            <TextView
                android:id="@+id/BlueAllianceLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Blue"
                app:layout_constraintLeft_toRightOf="@+id/AllianceSwitch"
                app:layout_constraintTop_toTopOf="@+id/RedAllianceLabel"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="8dp"
                android:textSize="15dp"
                android:textAlignment="center"
                />
            <TextView
            android:id="@+id/AutonomousLabel"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Autonomous"
            android:textAlignment="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RedAllianceLabel"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/Jewel1Label"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Jewel"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AutonomousLabel"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:textSize="15dp"/>


            <Spinner
                android:id="@+id/Jewel1Spinner"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/Jewel1Label"
                app:layout_constraintTop_toBottomOf="@+id/Jewel1Label"
                />
                 />
            <TextView
                android:id="@+id/AutoGlyphsLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Glyphs"
                app:layout_constraintLeft_toLeftOf="@+id/Jewel1Spinner"
                app:layout_constraintTop_toBottomOf="@+id/Jewel1Spinner"
                android:layout_marginTop="20dp"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/AddAutoGlyphs"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="+"
                app:layout_constraintLeft_toRightOf="@+id/AutoGlyphsLabel"
                app:layout_constraintTop_toBottomOf="@+id/Jewel1Spinner"
                android:onClick="addAutoGlyph"/>
            <TextView
                android:id="@+id/AutoGlyphsNumber"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintLeft_toRightOf="@+id/AddAutoGlyphs"
                app:layout_constraintTop_toBottomOf="@+id/Jewel1Spinner"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/SubAutoGlyphs"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="-"
                app:layout_constraintLeft_toRightOf="@+id/AutoGlyphsNumber"
                app:layout_constraintTop_toBottomOf="@+id/Jewel1Spinner"
                android:onClick="subAutoGlyph"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/AutoParkCheckBox"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Parked in target"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="@id/AutoGlyphsLabel"
                app:layout_constraintTop_toBottomOf="@+id/AddAutoGlyphs"
                android:onClick = "autoParkClick"/>
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/AutoVuforiaGlyphCheckbox"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Vuforia Glyph Inserted"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="@id/AutoParkCheckBox"
                app:layout_constraintTop_toBottomOf="@+id/AutoParkCheckBox"
                android:onClick="autoVuforiaClick"
                />
            <TextView
                android:id="@+id/AutoSwitch1Label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Far Stone"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@id/AutoVuforiaGlyphCheckbox"
                app:layout_constraintTop_toBottomOf="@+id/AutoVuforiaGlyphCheckbox"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:textSize="15dp" />
            <Switch
                android:id="@+id/AutoSwitch"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/AutoSwitch1Label"
                app:layout_constraintTop_toTopOf="@+id/AutoSwitch1Label"
                />
            <TextView
                android:id="@+id/AutoSwitch2Label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Close Stone"
                android:textAlignment="center"
                app:layout_constraintLeft_toRightOf="@id/AutoSwitch"
                app:layout_constraintTop_toTopOf="@+id/AutoSwitch"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/TeleopLabel"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="TeleOp"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@id/AutoSwitch1Label"
                app:layout_constraintTop_toBottomOf="@+id/AutoSwitch1Label"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="16dp"
                android:textSize="15dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/TeleopGlyphLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Glyphs"
                app:layout_constraintLeft_toLeftOf="@+id/TeleopLabel"
                app:layout_constraintTop_toBottomOf="@+id/TeleopLabel"
                android:layout_marginTop="20dp"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/AddTeleopGlyph"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="+"
                app:layout_constraintLeft_toRightOf="@+id/TeleopGlyphLabel"
                app:layout_constraintTop_toBottomOf="@+id/TeleopLabel"
                android:onClick="addTeleopGlyphs"/>
            <TextView
                android:id="@+id/TeleopGlyphNumber"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintLeft_toRightOf="@+id/AddTeleopGlyph"
                app:layout_constraintTop_toBottomOf="@+id/TeleopLabel"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/SubTeleopGlyph"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="-"
                app:layout_constraintLeft_toRightOf="@+id/TeleopGlyphNumber"
                app:layout_constraintTop_toBottomOf="@+id/TeleopLabel"
                android:onClick="subTeleopGlyphs"
                />
            <TextView
                android:id="@+id/TeleopRowLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Rows"
                app:layout_constraintLeft_toLeftOf="@+id/TeleopGlyphLabel"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopGlyph"
                android:layout_marginTop="20dp"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/AddTeleopRows"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="+"
                app:layout_constraintLeft_toRightOf="@+id/TeleopRowLabel"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopGlyph"
                android:onClick="addTeleopRows"/>
            <TextView
                android:id="@+id/TeleopRowNumber"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintLeft_toRightOf="@+id/AddTeleopRows"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopGlyph"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/SubTeleopRow"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="-"
                app:layout_constraintLeft_toRightOf="@+id/TeleopRowNumber"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopGlyph"
                android:onClick="subTeleopRows"
                />
            <TextView
                android:id="@+id/TeleopColumnLabel"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Columns"
                app:layout_constraintLeft_toLeftOf="@+id/TeleopRowLabel"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopRows"
                android:layout_marginTop="20dp"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/AddTeleopColumns"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="+"
                app:layout_constraintLeft_toRightOf="@+id/TeleopColumnLabel"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopRows"
                android:onClick="addTeleopColumns"/>
            <TextView
                android:id="@+id/TeleopColumnNumber"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintLeft_toRightOf="@+id/AddTeleopColumns"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopRows"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="15dp"
                />
            <Button
                android:id="@+id/SubTeleopColumn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:text="-"
                app:layout_constraintLeft_toRightOf="@+id/TeleopColumnNumber"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopRows"
                android:onClick="subTeleopColumn"
                />
            <CheckBox
                android:id="@+id/CipherCheckBox"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Cipher Completed"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="@id/TeleopColumnLabel"
                app:layout_constraintTop_toBottomOf="@+id/AddTeleopColumns"
                android:onClick="autoVuforiaClick"
                />

            <TextView
                android:id="@+id/TeleopSwitch1Label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Far Box"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="@id/CipherCheckBox"
                app:layout_constraintTop_toBottomOf="@+id/CipherCheckBox"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:textSize="15dp" />
            <Switch
                android:id="@+id/TeleopSwitch"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/TeleopSwitch1Label"
                app:layout_constraintTop_toTopOf="@+id/TeleopSwitch1Label"
                />
            <TextView
                android:id="@+id/TeleopSwitch2Label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Close Box"
                android:textAlignment="center"
                app:layout_constraintLeft_toRightOf="@id/TeleopSwitch"
                app:layout_constraintTop_toTopOf="@+id/TeleopSwitch"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:textSize="15dp"
                />
            <TextView
                android:id="@+id/EndGameLabel"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="End Game"
                app:layout_constraintLeft_toLeftOf="@+id/TeleopSwitch1Label"
                app:layout_constraintTop_toBottomOf="@+id/TeleopSwitch1Label"
                android:layout_marginTop="20dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/Relic1Label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Relic 1"
                app:layout_constraintLeft_toLeftOf="@+id/EndGameLabel"
                app:layout_constraintTop_toBottomOf="@+id/EndGameLabel"
                android:textSize="15dp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/Relic2Label"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Relic 2"
                app:layout_constraintLeft_toRightOf="@+id/Relic1Label"
                app:layout_constraintTop_toBottomOf="@+id/EndGameLabel"
                android:textSize="15dp"
                android:textAlignment="center"
                />
            <Spinner
                android:id="@+id/Relic1Spinner"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/Relic1Label"
                app:layout_constraintTop_toBottomOf="@+id/Relic1Label" />
            />
            <Spinner
                android:id="@+id/Relic2Spinner"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/Relic2Label"
                app:layout_constraintTop_toBottomOf="@+id/Relic2Label" />
            />
            <CheckBox
                android:id="@+id/Relic1CheckBox"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Standing"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="@id/Relic1Spinner"
                app:layout_constraintTop_toBottomOf="@+id/Relic1Spinner"
                android:onClick="standing1Update"
                />
            <CheckBox
                android:id="@+id/Relic2CheckBox"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Standing"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="@id/Relic2Spinner"
                app:layout_constraintTop_toBottomOf="@+id/Relic2Spinner"
                android:onClick="standing2Update"
                />
            <CheckBox
                android:id="@+id/BalancedPark"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Balanced on stone"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="@id/Relic1CheckBox"
                app:layout_constraintTop_toBottomOf="@+id/Relic1CheckBox"
                android:onClick="balanceUpdate"
                />
            <TextView
                android:id="@+id/ScoreLabel"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="Score: "
                app:layout_constraintLeft_toLeftOf="@+id/BalancedPark"
                app:layout_constraintTop_toBottomOf="@+id/BalancedPark"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/Score"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="0"
                app:layout_constraintLeft_toRightOf="@+id/ScoreLabel"
                app:layout_constraintTop_toBottomOf="@+id/BalancedPark"
                android:textSize="15dp"
                android:layout_marginTop="20dp"
                />
            <CheckBox
                android:id="@+id/FTAError"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="FTA Error"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="@id/ScoreLabel"
                app:layout_constraintTop_toBottomOf="@+id/ScoreLabel"
                />
            <EditText
                android:id="@+id/AdditionalComments"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Additional Comments"
                android:inputType="text"
                app:layout_constraintLeft_toLeftOf="@id/FTAError"
                app:layout_constraintTop_toBottomOf="@id/FTAError"
                />
            <Button
                android:id="@+id/Submit"
                android:text="submit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:onClick = "submitButtonPressed"
                app:layout_constraintLeft_toLeftOf="@id/AdditionalComments"
                app:layout_constraintTop_toBottomOf="@id/AdditionalComments"
                />
            <Button
                android:id="@+id/Reset"
                android:text="Reset"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/Submit"
                android:onClick="resetButtonPressed"
                app:layout_constraintTop_toBottomOf="@id/AdditionalComments"
                />

        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>
</ScrollView>
